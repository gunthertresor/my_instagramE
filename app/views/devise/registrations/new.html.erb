
<div class = "container home-sections d-flex flex-row justify-content-center align-items-center">
  <div class = "login-section pt-3">

    <div class = "card text-center pt-5 mx-auto" style = "width: 23rem;">
      <%= image_tag 'logo.png', class: 'card-img-top'%>
      <p class = "w-75 fs-6 fw-bold text-secondary align-self-center mt-2">Sign up to see photos and videos from your friends</p>
      <a href="#" class = "d-block mt-4 text-decoration-none fw-bold bg-primary text-white rounded w-75 align-self-center p-1">
          <%= image_tag 'facebook.png', class: "facebook"%>
          Log in with Facebook
        </a>
        <div class = "d-flex align-items-center mt-4">
          <div class = "line"></div>
            <h2 class ="line-text">OR</h2>
          <div class="line"></div>
        </div>


      <div class = "card-body">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
          <%= f.error_notification %>
          <div class = "mb-3 mt-4">
            <%= f.input :email, label: false,
                required: true,
                autofocus: true,
                class: "form-control",
                placeholder: "Phone number or email",
                input_html: { autocomplete: "email" } %>
          </div>
          <div class = "mb-3 mt-4">
            <%= f.input :full_name, label: false,
                required: true,
                autofocus: true,
                class: "form-control",
                placeholder: "Full Name",
                input_html: { autocomplete: "Full Name" } %>
          </div>
          <div class = "mb-3 mt-4">
            <%= f.input :username, label: false,
                required: true,
                autofocus: true,
                class: "form-control",
                placeholder: "Username",
                input_html: { autocomplete: "username" } %>
          </div><div class = "mb-3 mt-4">
            <%= f.input :password, label: false,
                required: true,
                autofocus: true,
                class: "form-control",
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                placeholder: "Password",
                input_html: { autocomplete: "new-password" } %>
          </div>
          <div class = "mb-3 mt-4">
            <%= f.input :password_confiramtion, label: false,
                required: true,
                class: "form-control",
                placeholder: "Password Confirmation",
                input_html: { autocomplete: "new-password" } %>
          </div>
          <%# <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          <%= f.button :submit, "Sign Up", class: "btn btn-primary w-100" %>
        <% end %>

        <% if notice %>
          <p class = "notice"><%= notice %></p>
        <% elsif %>
          <p class = "alert"><%= alert %></p>
        <% end %>

      </div>
    </div>

      <div class = "card text-center py-2 mt-3 mx-auto" style = "width: 23rem;">
        <div class = "card-text">
          Have an account?
          <%= link_to 'Sign in', new_user_session_path, class: "fs-6 my-4 text-decoration-none text-info" %>
        </div>
      </div>
  </div>
</div>
