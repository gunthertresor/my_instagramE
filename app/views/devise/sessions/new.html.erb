
<div class = "container home-sections d-flex flex-row justify-content-center align-items-center">
  <div class = "images-section pt-3 d-none d-lg-block"></div>

  <div class = "login-section pt-3">

    <div class = "card text-center pt-5" style = "width: 23rem;">
      <%= image_tag 'logo.png', class: 'card-img-top'%>
      <div class = "card-body">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
          <div class = "mb-3 mt-4">
            <%= f.input :email, label: false,
                required: false,
                autofocus: true,
                class: "form-control",
                placeholder: "Phone number, username, or email",
                input_html: { autocomplete: "email" } %>
          </div>
          <div class = "mb-3 mt-4">
            <%= f.input :password, label: false,
                required: false,
                class: "form-control",
                placeholder: "Password",
                input_html: { autocomplete: "current-password" } %>
          </div>
          <%# <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          <%= f.button :submit, "Log in", class: "btn btn-primary w-100" %>
        <% end %>

        <div class = "d-flex align-items-center mt-4">
          <div class = "line"></div>
          <h2 class = "line-text">OR</h2>
          <div class = "line"></div>
        </div>

        <a href="#" class = "d-block mt-4 text-decoration-none fw-bold">
          <%= image_tag 'facebook.png', class: 'facebook' %>
          Log in with Facebook
        </a>
        <%= render "shared/flashes" %>
        <%# <% if notice %>
          <%# <p class = "notice"><%= notice %>
        <%# <% elsif %>
          <%# <p class = "alert"><%= alert %>
        <%# <% end %>
         <%= link_to 'Forgot password?', new_user_password_path, class: "fs-6 d-block my-4 text-decoration-none" %>
      </div>
    </div>

      <div class = "card text-center py-2 mt-3" style = "width: 23rem;">
        <div class = "card-text">
          Don't have an account?
          <%= link_to 'Sign up', new_user_registration_path, class: "fs-6 my-4 text-decoration-none" %>
        </div>
      </div>
  </div>
</div>
